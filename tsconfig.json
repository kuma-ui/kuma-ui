{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@kuma-ui/*": ["./packages/*/src"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "packages/**/dist/**"]
}
